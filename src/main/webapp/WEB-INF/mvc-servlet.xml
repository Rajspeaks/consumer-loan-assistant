<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                       http://www.springframework.org/schema/beans/spring-beans.xsd
                       http://www.springframework.org/schema/context 
                       http://www.springframework.org/schema/context/spring-context.xsd
                       http://www.springframework.org/schema/mvc
                       http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
		p:ignoreUnresolvablePlaceholders="true">
		<property name="locations">
			<list>
				<value>classpath:hibernate-h2.properties</value>
				<value>classpath:hibernate-extra.properties</value>
				<value>classpath:endpoint.properties</value>
			</list>
		</property>
	</bean>

	<import resource="resources.xml" />

	<mvc:annotation-driven />

	<context:component-scan base-package="com.westbank.config" />
	<context:component-scan base-package="com.westbank.web" />
	<context:component-scan base-package="com.westbank.web.staff.model" />
	<context:component-scan base-package="com.westbank.web.staff.controller" />
	<context:component-scan base-package="com.westbank.web.customer.controller" />
	<context:component-scan base-package="com.westbank.web.customer.model" />
 
	<context:annotation-config />

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver"
		p:viewClass="org.springframework.web.servlet.view.JstlView"
		p:prefix="/WEB-INF/jsp/" p:suffix=".jsp" />

	<bean id="loginValidator"
		class="com.westbank.web.validator.LoginValidator" />
	<bean id="customerProfileValidator"
		class="com.westbank.web.validator.ProfileValidator" />
	<bean id="staffLoginValidator"
		class="com.westbank.web.validator.StaffLoginValidator" />
	<bean id="loanRequestValidator"
		class="com.westbank.web.validator.LoanRequestValidator" />
	<bean id="newLoanRequestValidator"
		class="com.westbank.web.validator.NewRequestValidator" />

	<bean id="loginForm"
		class="com.westbank.web.form.LoginForm"
		p:email="power@abc.com">
	</bean>
	<bean id="staffLoginForm"
		class="com.westbank.web.form.StaffLoginForm"
		p:id="bryan">
	</bean>

</beans>
